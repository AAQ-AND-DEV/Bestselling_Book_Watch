<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="regular_text_style">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/textsize_medium</item>
        <item name="android:textColor">@color/color_accent_dark</item>
    </style>
    <style name="MyTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="android:actionBarStyle">@style/MyTheme.ActionBarStyle</item>
        <item name="colorPrimary">@color/light_gray_bg</item>
        <item name="colorPrimaryVariant">@color/med_gray_bg</item>
        <item name="android:textColorPrimary">@color/color_accent_very_dark</item>
    </style>
    <style name="MyTheme.ActionBarStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
        <item name="background">@color/light_gray_bg</item>
    </style>
    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/color_accent_very_dark</item>
    </style>
</resources>